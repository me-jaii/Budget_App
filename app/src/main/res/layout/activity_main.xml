<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#E0E0E0"
      android:padding="8dp"
      android:layout_marginBottom="8dp">

    <EditText
        android:id="@+id/editTextIncome"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="Income"
        android:inputType="numberDecimal"
        android:background="@null" />

    <Button
        android:id="@+id/buttonAddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:background="#2196F3"
        android:textColor="#FFFFFF" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#E0E0E0"
      android:padding="8dp"
      android:layout_marginBottom="8dp">

    <EditText
        android:id="@+id/editTextExpense"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="Expense"
        android:inputType="numberDecimal"
        android:background="@null" />

    <Button
        android:id="@+id/buttonAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:background="#FF5722"
        android:textColor="#FFFFFF" />
  </LinearLayout>

  <ListView
      android:id="@+id/listViewEntries"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="#E0E0E0"
      android:divider="@android:color/darker_gray"
      android:dividerHeight="1dp" />

  <TextView
      android:id="@+id/textViewTotalExpense"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Total Expense: ₹ 0"
      android:textSize="18sp"
      android:textColor="#000000" />

  <TextView
      android:id="@+id/textViewTotalSavings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Total Savings: ₹ 0"
      android:textSize="18sp"
      android:textColor="#000000" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:text="Developed by DCS x GDSC"
      android:textSize="12sp"
      android:layout_gravity="center"
      android:textColor="@color/black" />

</LinearLayout>
